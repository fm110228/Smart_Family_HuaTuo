<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">个人信息健康档案</view>
</cu-custom>
<form>
	<view class="cu-form-group margin-top">
		<view class="title">姓名</view>
		<input placeholder="请输入姓名"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">性别</view>
		<input placeholder="男 或 女"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">年龄</view>
		<input placeholder="请输入年龄"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">身高CM</view>
		<input placeholder="请输入身高"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">体重KG</view>
		<input placeholder="请输入体重"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">手机号码</view>
		<input placeholder="输入电话号码"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>

	<view class="cu-form-group">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入病史"></textarea>
	</view>

	<view class="cu-form-group margin-top">
		<view class="title">服药计划</view>
	</view>

	<view class="cu-form-group">
		<view class="title">服药开始日期</view>
		<picker mode="date" value="2024-07-01" start="2023-09-01" end="2025-09-01" bindchange="DateChange">
			<view class="picker">
				2024-07-01
			</view>
		</picker>
	</view>

	<view class="cu-form-group">
		<view class="title">服药结束日期</view>
		<picker mode="date" value="2024-09-01" start="2023-09-01" end="2025-09-01" bindchange="DateChange">
			<view class="picker">
				2024-09-01
			</view>
		</picker>
	</view>

	<view class="cu-form-group">
		<view class="title">每天服药的时间</view>
		<picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
			<view class="picker">
				{{time}}
			</view>
		</picker>
	</view>

	<view class="cu-form-group">
		<view class="title">增加服药时间</view>
		<switch></switch>
	</view>

	<view class="cu-form-group">
		<view class="title">选择药品</view>
		<picker mode="multiSelector" bindchange="MultiChange" bindcolumnchange="MultiColumnChange" value="{{multiIndex}}"
		 range="{{multiArray}}">
			<view class="picker">
				{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
			</view>
		</picker>
	</view>

  <view class="padding-xl">
  <button class="cu-btn block bg-blue margin-tb-sm lg">
    <text class="iconfont-spin"></text> 保存</button>
</view>

</form>
