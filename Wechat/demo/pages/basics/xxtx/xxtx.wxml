<scroll-view scroll-y="{{modalName==null}}" class="page {{modalName!=null?'show':''}}">
  <cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">消息列表</view>
  </cu-custom>

  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 消息提醒
    </view>
  </view>
  <view class="cu-list menu-avatar">
    <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{1}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar round lg">
      </view>
      <view class="content">
        <view class="text-grey">王淑华 ，体温异常（39.1摄氏度），请及时关注</view>
        <view class="text-gray text-sm">
          <text class="cuIcon-infofill text-red"></text> 消息未阅读</view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">18:20</view>
        <view class="cu-tag round bg-grey sm">1</view>
      </view>
      <view class="move">
        <view class="bg-grey">置顶</view>
        <view class="bg-red">删除</view>
      </view>
    </view>

    <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{1}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar round lg">
      </view>
      <view class="content">
        <view class="text-grey">王淑华 ，16点未吃药，请及时提醒</view>
        <view class="text-gray text-sm">
          <text class="cuIcon-infofill text-green"></text> 消息已阅读</view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">16:05</view>
      </view>
      <view class="move">
        <view class="bg-grey">置顶</view>
        <view class="bg-red">删除</view>
      </view>
    </view>
    

    <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{1}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar round lg">
      </view>
      <view class="content">
        <view class="text-grey">李建国 ，8点未吃药，请及时提醒</view>
        <view class="text-gray text-sm">
          <text class="cuIcon-infofill text-green"></text> 消息已阅读</view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">08:05</view> 
      </view>
      <view class="move">
        <view class="bg-grey">置顶</view>
        <view class="bg-red">删除</view>
      </view>
    </view>
    <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{1}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar round lg">
      </view>
      <view class="content">
        <view class="text-grey">李建国 ，12点未吃药，请及时提醒</view>
        <view class="text-gray text-sm">
          <text class="cuIcon-infofill text-green"></text> 消息已阅读</view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">12:03</view> 
      </view>
      <view class="move">
        <view class="bg-grey">置顶</view>
        <view class="bg-red">删除</view>
      </view>
    </view>
  </view>
</scroll-view>